set nocompatible
filetype indent on
syntax on

set hidden
set nostartofline
set nobackup
set noswapfile

set t_Co=256

set wildmenu
set wildmode=longest:full,full

set showcmd

set incsearch
set hlsearch
set ignorecase
set smartcase

set backspace=indent,eol,start
set autoindent
set smartindent

set ruler
set rulerformat=%15(%l,%c%V\ %p%%%)


set laststatus=0
set confirm
set noerrorbells
set t_vb=
set cmdheight=2
set number

set wrap

set expandtab
set tabstop=8
set shiftwidth=4
set softtabstop=4
set smarttab


set encoding=utf-8
set fileencoding=utf-8

set go=a
set mouse=a
set ttyfast


let &t_SI = "\e[6 q"
let &t_EI = "\e[2 q"
