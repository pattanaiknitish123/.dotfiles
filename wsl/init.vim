filetype indent on

set scrolloff=8
set nobackup
set noswapfile
set undodir=~/.local/state/nvim/undo/   "default enabled...same

set ignorecase
set smartcase

set smartindent

set confirm
set noerrorbells
set number
set laststatus=0

set wrap
set expandtab
set tabstop=8
set shiftwidth=4
set softtabstop=4

set encoding=utf-8
set fileencoding=utf-8
set fileformat=unix

set title
set mouse=a             "default set only  to n,v,i... I set it to all-a

"remap keys
nnoremap <C-h> <C-w>h
nnoremap <C-j> <C-w>j
nnoremap <C-k> <C-w>k
nnoremap <C-l> <C-w>l

"set termguicolors
colorscheme peachpuff
hi Comment ctermfg=green
hi Type ctermfg=darkblue
hi Special ctermfg=darkyellow
hi Search ctermfg=black
hi Visual ctermfg=black
hi DiffChange ctermbg=white ctermfg=darkmagenta
hi CursorColumn ctermfg=black
hi ColorColumn ctermfg=brown
hi NvimInternalError ctermbg=red ctermfg=white
hi SpellBad ctermbg=red ctermfg=white
hi SpellCap ctermbg=blue ctermfg=white
hi SpellRare ctermbg=magenta ctermfg=white
hi Spellocal ctermbg=cyan ctermfg=white
hi Pmenu ctermbg=magenta ctermfg=black
hi RedrawDebugClear ctermbg=darkyellow ctermfg=white

"hi LineNr ctermfg=darkyellow
"hi Identifier ctermfg=blue
"hi Error ctermfg=white ctermbg=red
"hi LineNr ctermfg=darkyellow

"colorscheme default
"highlight Comment ctermfg=green
"highlight Constant ctermfg=red
"highlight Identifier ctermfg=blue
"highlight PreProc ctermfg=darkmagenta
"highlight Special ctermfg=darkcyan
"highlight Type ctermfg=cyan
"highlight Statement ctermfg=darkyellow
"highlight LineNr ctermfg=brown
"highlight RedrawDebugClear ctermbg=yellow ctermfg=black
"highlight RedrawDebugComposed ctermbg=darkgreen ctermfg=white
